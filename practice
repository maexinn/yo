<body>
  <div class="container">
    <h1>Anonymous Confession</h1>
    <textarea id="confessionInput" placeholder="hi"></textarea>
    <button onclick="postConfession()">Post</button>
    <div class="confessions" id="confessionsList"></div>
  </div>

  <script>
    function postConfession() {
      let input = document.getElementById("confessionInput");
      let text = input.value.trim();

      if (text !== "") {
        let confessionBox = document.createElement("div");
        confessionBox.className = "confession";
        confessionBox.textContent = text;

        document.getElementById("confessionsList").prepend(confessionBox);
        input.value = "";
      } else {
        alert("Please write something before posting!");
      }
    }
  </script>
</body>
